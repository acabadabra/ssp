{% extends "base.html.twig" %}
{% block title %}acab.io::status / update report #{{ report.ID }} {% endblock %}

{% block content %}

  <h2>{{ titre }}</h2>
  <form action="controller.php">
    <input type="hidden" name="action" value="update">
    <input type="hidden" name="id" value="{{ report.ID }}">
    
    <p>
      <label for="date">Date :</label>
      <input type="datetime-local" name="date" value="{{ report.DATE }}" required>
    </p>
    
    <p>
      <label for="title">Title :</label>
      <input type="text" name="title" value="{{ report.TITLE }}">
    </p>
    
    <p>
      <label for="maindescription">Description :</label><br />
      <textarea name="maindescription" required>{{ report.MAINDESCRIPTION }}</textarea>
    </p>
    
    <p>
      <label for="state">Resolved :</label>
      <input type="checkbox" name="state" value="1" {% if report.STATE == true %}checked{% endif %}>
    </p>

    <button type="submit">
      <i class="fas fa-check"></i>
    </button>
  </form>
  <hr />
  <form action="controller.php">
    <input type="hidden" name="action" value="add_description">
    <input type="hidden" name="report_id" value="{{report.ID}}">
    
    <p>
      <label for="date">Date :</label>
      <input type="datetime-local" name="date" value="{{now}}" required>
    </p>
        
    <p>
      <label for="description">Description :</label><br />
      <textarea name="description" placeholder="Type your message here !" required></textarea>
    </p>
    
    <button type="submit">
      <i class="fas fa-plus"></i>
    </button>
  </form>

{% endblock %}
